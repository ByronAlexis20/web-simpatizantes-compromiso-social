<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="web-simpatizantes-compromiso-social" transaction-type="RESOURCE_LOCAL">
		<class>com.compromiso.social.modelo.Canton</class>
		<class>com.compromiso.social.modelo.Empresa</class>
		<class>com.compromiso.social.modelo.Menu</class>
		<class>com.compromiso.social.modelo.Parroquia</class>
		<class>com.compromiso.social.modelo.Perfil</class>
		<class>com.compromiso.social.modelo.Permiso</class>
		<class>com.compromiso.social.modelo.Provincia</class>
		<class>com.compromiso.social.modelo.Simpatizante</class>
		<class>com.compromiso.social.modelo.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/compromiso-social"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
